doctype html

include ../components
//- include ./data

block variables

-
  const pageDescription = "ООО «Монолит»"

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, viewport-fit=cover")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content=pageDescription)
    meta(name="keywords" content="ООО «Монолит»")

    meta(name= `og:title`, content= title)
    meta(name= `og:description`, content= pageDescription)

    meta(name= `og:url`, content= ``)
    meta(name= `og:site_name`, content=title)
    meta(name= `og:locale`, content= `ru_RU`)
    meta(name= `og:type`, content= `website`)

    meta(name= `application-name`, content= title)

    //- meta(property=`vk:image` content=`img/content/sharing.jpg`)
    //- meta(property=`og:image` content=`img/content/sharing.jpg`)
    //- meta(property=`og:image:width` content=`200`)
    //- meta(property=`og:image:height` content=`200`)

    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    link(rel="apple-touch-icon" sizes="180x180" href="./favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="./favicon/favicon-16x16.png")
    link(rel="manifest" href="./favicon/site.webmanifest" crossorigin="use-credentials")
    link(rel="mask-icon" href="./favicon/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")

    //- используйте только для шрифта находящегося на первом экране
    link(rel="preload", href="fonts/grandis-extended-regular.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl, headerActivePage)

      block main

      if (hasFooter)
        +footer(footerMods, currentUrl).after-sticky-intro

    +rotate()
    //- +cookies()
    block modals

    block scripts

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
